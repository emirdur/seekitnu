generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  displayName String   @unique
  imageId     Int?     // either image is uploaded or not
  image       Image?   
  wins        Int      @default(0)
  rank        Int
  userLikes   UserLike[] // one-to-many relationship representing the user's likes
  firebaseUid String?  @unique
}

model Image {
  id        Int      @id @default(autoincrement())
  filePath  String
  userId    Int      @unique // each user should have a unique image
  user      User     @relation(fields: [userId], references: [id])
  likes     Int      @default(0)
  userLikes UserLike[] // represents all user likes for the image
}

model UserLike {
  id        Int    @id @default(autoincrement())
  userId    Int 
  imageId   Int    
  user      User   @relation(fields: [userId], references: [id])
  image     Image  @relation(fields: [imageId], references: [id])
}




