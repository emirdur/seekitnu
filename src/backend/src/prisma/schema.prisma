generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firebaseUid  String   @unique
  displayName  String
  imagePath    String
  createdAt    DateTime @default(now())
}

model Task {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String
}

model Image {
  id         Int      @id @default(autoincrement())
  filename   String   // Store original file name
  filePath   String   // Store path to file on server
  mimetype   String   // Store MIME type (e.g., image/png)
  size       Int      // Store image size in bytes
  uploadedAt DateTime @default(now()) // Store the time the file was uploaded
}
