generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  displayName String   @unique
  imageId     Int?     // Each user can have at most one image
  image       Image?   // One-to-one relationship with Image (optional)
  wins        Int      @default(0)
  rank        Int      @default(2147483647)
  userLikes   UserLike[] // Many-to-many relationship (user can like many images)
  firebaseUid String?  @unique
}

model Image {
  id        Int      @id @default(autoincrement())
  filePath  String
  userId    Int      @unique // Foreign key to the User model, one-to-many relationship
  user      User     @relation(fields: [userId], references: [id]) // One user can have many images
  likes     Int      @default(0)
  userLikes UserLike[] // Many-to-many relationship (image can be liked by many users)
}

model UserLike {
  id        Int    @id @default(autoincrement())
  userId    Int 
  imageId   Int    
  user      User   @relation(fields: [userId], references: [id])
  image     Image  @relation(fields: [imageId], references: [id])
}
