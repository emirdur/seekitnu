generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firebaseUid  String   @unique
  displayName  String
  imagePath    String
  createdAt    DateTime @default(now())
}

model Task {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String
}

model Image {
  id   Int    @id @default(autoincrement())
  path String
}


